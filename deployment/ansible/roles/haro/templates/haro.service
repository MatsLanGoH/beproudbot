# /etc/systemd/system/haro.service
[Unit]
Description=haro
After=network.target

[Service]
PIDFile=/run/haro.pid
User={{ BOT_USER }}
Group={{ BOT_GROUP }}
WorkingDirectory={{ REPOSITORY_PATH }}
EnvironmentFile={{ REPOSITORY_PATH }}/.env
ExecStart={{ VIRTUALENV_PATH }}/bin/python run.py
ExecStop=/bin/kill -s TERM $MAINPID
# TODO: あとで設定するかみる
PrivateTmp=true
Restart=always

[Install]
WantedBy=multi-user.target
